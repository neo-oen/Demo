option optimize_for = LITE_RUNTIME;

package ctuab.proto.message;

//Authentication method
enum AuthMethod {
	IMSI = 1; 		//Authentication by IMSI
	CTPASSPORT = 2; //Authentication by E-Surfing
	MDN  = 3;       //Authentication by MDN which inserted by WAP proxy
}

//Authentication request
message AuthRequest {
	required AuthMethod method = 1;		//Authentication method
	optional string account = 2; 		//Account
	optional string password = 3; 		//Password
	optional string verify_sign = 4;    //Verification signature
}

//Authentication response
message AuthResponse {
	required string token = 1; 			//Token generated by sync-server
	optional uint32 token_expires = 2;	//Token expires time¡££¨Measure£ºSecond£©
	optional string p_user_id = 3; 		//CT Passport ID
	optional int64 sync_user_id = 4;	//Unique user ID generated by sync-server
	optional string mobile_num = 5;		//Mobile number
}
